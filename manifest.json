{
  "manifest_version": 3,
  "name": "What's Going ON Here?",
  "version": "0.1",
  "description": "Boost your productivity by tracking web activity and blocking distracting websites. Features include time tracking, customizable block lists, and a progress journal.",
  "permissions": ["tabs", "storage", "declarativeNetRequest"],
  "optional_permissions": ["history", "notifications"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "What's Going ON Here? Settings"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["<all_urls>"]
}